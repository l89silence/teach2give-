//javascript program for true if the input is a power of 2 ; using 8 & 6 as examples

importScripts
function isPowerOfTwo(n) {
  if (n <= 0 || n % 2 !== 0) return false;
  while (n > 1) {
    if (n % 2 !== 0) return false;
    n = n / 2;
  }
  return true;
}
//trying examples of 6 & 8
console.log(isPowerOfTwo(8));  // resulting output: true
console.log(isPowerOfTwo(6));  // resulting output: false
